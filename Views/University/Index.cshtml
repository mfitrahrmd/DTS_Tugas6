@model IEnumerable<University>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(u => u.Name)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var u in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => u.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@u.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@u.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@u.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>